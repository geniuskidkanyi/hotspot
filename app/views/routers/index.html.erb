<!-- app/views/routers/index.html.erb -->
<% content_for(:page_title, "Routers") %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-gray-900">Routers</h1>

      <p class="mt-2 text-sm text-gray-700">
        A list of all the routers in your account including their name,
        location, DDNS hostname, current IP and status.
      </p>
    </div>

    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to 'Add router', new_router_path, class: 'block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div
      class="
        rounded-lg bg-green-50 px-4 py-6 shadow outline outline-1
        outline-green-200
      "
    >
      <p class="text-sm font-medium text-green-800">Online Routers</p>

      <p class="mt-2 text-3xl font-semibold text-green-900">
        <%= @online_count %>
      </p>
    </div>

    <div
      class="
        rounded-lg bg-red-50 px-4 py-6 shadow outline outline-1
        outline-red-200
      "
    >
      <p class="text-sm font-medium text-red-800">Offline Routers</p>

      <p class="mt-2 text-3xl font-semibold text-red-900">
        <%= @offline_count %>
      </p>
    </div>
  </div>

  <!-- Routers Table -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div
          class="
            overflow-hidden shadow outline outline-1 outline-black/5
            sm:rounded-lg
          "
        >
          <table class="relative min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th
                  scope="col"
                  class="
                    py-3.5 pl-4 pr-3 text-left text-sm font-semibold
                    text-gray-900 sm:pl-6
                  "
                >
                  Name
                </th>

                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  Location
                </th>

                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  DDNS Hostname
                </th>

                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  Current IP
                </th>

                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  Last Seen
                </th>

                <th
                  scope="col"
                  class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                >
                  Status
                </th>

                <th scope="col" class="py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>

            <tbody class="divide-y divide-gray-200 bg-white">
              <% @routers.each do |router| %>
                <tr>
                  <td
                    class="
                      whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium
                      text-gray-900 sm:pl-6
                    "
                  >
                    <%= link_to router.name, router, class: 'text-indigo-600 hover:text-indigo-900' %>
                  </td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= router.location %>
                  </td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= router.ddns_hostname %>
                  </td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= router.current_ip || 'Unknown' %>
                  </td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <% if router.last_seen_at %>
                      <%= time_ago_in_words(router.last_seen_at) %>
                      ago
                    <% else %>
                      Never
                    <% end %>
                  </td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% if router.active? %>
                      <span
                        class="
                          inline-flex items-center rounded-full bg-green-100
                          px-3 py-1 text-sm font-medium text-green-800
                        "
                      >
                        Online
                      </span>
                    <% else %>
                      <span
                        class="
                          inline-flex items-center rounded-full bg-red-100
                          px-3 py-1 text-sm font-medium text-red-800
                        "
                      >
                        Offline
                      </span>
                    <% end %>
                  </td>

                  <td
                    class="
                      whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm
                      font-medium sm:pr-6
                    "
                  >
                    <div class="flex gap-2 justify-end">
                      <%= link_to 'Edit', edit_router_path(router), class: 'text-indigo-600 hover:text-indigo-900' %>

                      <%= button_to 'Check', check_status_router_path(router), 
                                    method: :patch, remote: true, 
                                    class: 'text-blue-600 hover:text-blue-900', 
                                    form: { style: 'display:inline;' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <% if @routers.empty? %>
    <div class="mt-8 text-center">
      <p class="text-gray-500">No routers found.</p>
      <%= link_to 'Add your first router', new_router_path, class: 'mt-4 inline-block rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500' %>
    </div>
  <% end %>
</div>
